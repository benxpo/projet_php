
<div class="book_list">
    <h2>Title</h2>
{% for book in titlebooks %}
    <div class="book_item" >
	<h5>{{ book.title }}</h5>
    </div>
{% else %}
    <em>No books found</em>
{% endfor %}
    <h2>Author</h2>
{% for author in authorbooks %}
    <div class="book_item" >
	<h5><a href="{{ asset('app_dev.php/author/' ~ author.id) }}">{{ author.name }}</a></h5>
    </div>
{% else %}
    <em>No books found</em>
{% endfor %}
    <h2>Description</h2>
{% for book in descriptionbooks %}
    <div class="book_item" >
	<h5>{{ book.title }}</h5>
    </div>
{% else %}
    <em>No books found</em>
{% endfor %}
</div>